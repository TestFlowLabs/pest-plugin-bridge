includes:
    - vendor/phpstan/phpstan/conf/bleedingEdge.neon

parameters:
    level: max
    paths:
        - src
    tmpDir: .phpstan.cache
    ignoreErrors:
        # BridgeTrait is used at runtime via Plugin::uses() in Autoload.php
        - identifier: trait.unused
        # BridgeTrait's visit() method comes from pest-plugin-browser at runtime
        -
            message: '#Call to an undefined method .+::visit\(\)#'
            reportUnmatched: false
