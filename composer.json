{
    "name": "testflowlabs/pest-plugin-bridge",
    "description": "Pest plugin for browser testing external frontend applications",
    "keywords": [
        "pest",
        "plugin",
        "browser",
        "testing",
        "external",
        "frontend",
        "e2e"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "TestFlowLabs"
        }
    ],
    "require": {
        "php": "^8.3",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin": "^4.0",
        "pestphp/pest-plugin-browser": "^4.0"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "pestphp/pest-dev-tools": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "TestFlowLabs\\PestPluginBridge\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TestFlowLabs\\PestPluginBridge\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "rector": "rector",
        "pint": "pint --parallel",
        "test:rector": "rector --dry-run",
        "test:pint": "pint --parallel --test",
        "test:phpstan": "phpstan analyse --ansi",
        "test:unit": "pest --parallel --coverage --min=50",
        "test:types": "pest --type-coverage --parallel",
        "test": [
            "@test:rector",
            "@test:pint",
            "@test:phpstan",
            "@test:unit",
            "@test:types"
        ]
    }
}
